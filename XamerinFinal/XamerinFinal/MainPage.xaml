<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamerinFinal"
             x:Class="XamerinFinal.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    

    <Image x:Name="theImage" Grid.Row="0" Margin="24"/>

    <ActivityIndicator x:Name ="theActivityIndicator" Grid.Row="1"/>

    <ScrollView Grid.Row="2">
        <Label x:Name="theResults" FontSize="16" HorizontalTextAlignment="Center" />
    </ScrollView>

    <StackLayout Grid.Row="3">
        <Button x:Name="WebImageButton" Text="Web Image" Clicked="WebImageButton_Clicked" Grid.Row="3"/>
        <Button x:Name="ImageButton" Text="Choose Image"  Clicked="ImageButton_Clicked" Grid.Row="3"/>
        <Button x:Name="CameraButton" Text="Camera"  Clicked="CameraButton_Clicked" Grid.Row="3"/>
    </StackLayout>
    </Grid>

</ContentPage>
